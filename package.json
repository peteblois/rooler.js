{
  "scripts": {
    "tsc-watch": "tsc -w",
    "rollup-demo": "rollup -c rollup.config.demo.js",
    "rollup-demo-watch": "rollup -w -c rollup.config.demo.js",
    "demo-files": "copyfiles -u 2 src/demo/* built/demo",
    "demo-css": "copyfiles -u 1 src/rooler.css built/demo",
    "demo": "npm run demo-files && npm run demo-css && npm run rollup-demo",
    "extension-code": "rollup -c rollup.config.extension.js",
    "extension-files": "copyfiles -u 2 src/extension/* src/extension/_locales/en/* built/extension",
    "extension": "npm run extension-files && npm run extension-code",
    "clean": "rimraf built"
  },
  "devDependencies": {
    "@rollup/plugin-image": "^2.0.5",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/chrome": "^0.0.126",
    "copyfiles": "^2.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.33.3",
    "rollup-plugin-postcss": "^3.1.8",
    "tslib": "^2.0.3",
    "typescript": "^4.1.2"
  }
}
